<odoo>
    <data>
        <record model="ir.ui.view" id="students.view_teacher_list" >
            <field name="name">Teachers list</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <list string="Teachers">
                    <field name="name"/>
                    <field name="lastname"/>
                    <field name="email"/>
                    <field name="school_id"/>
                    <field name="phone"/>
                </list>
            </field>
        </record>

        <record id="students.view_teacher_form" model="ir.ui.view">
            <field name="name">students.student.form</field>
            <field name="model">res.partner</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Teachers">
                <sheet>
                <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <field name="image_1920" widget='image' class="oe_avatar" options='{"preview_image": "avatar_128"}'/>
                    <div class="oe_title mb24">
                        <h1>
                            <field id="individual" options="{'line_breaks': False}" widget="text" class="text-break" name="name" default_focus="1" placeholder="Student name" invisible="is_company" required="is_teacher == 'True'"/>
                            <field id="individual" options="{'line_breaks': False}" widget="text" class="text-break" name="lastname" default_focus="1" placeholder="Student last name" invisible="is_company" required="is_teacher == 'True'"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="phone" string="Phone" placeholder="e.g. 123456789"/>
                            <field name="email" string="Email" placeholder="e.g. user@mail.com"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page name='meetings' string="Meetings">
                            <field name="meeting_teacher_ids"/>
                        </page>
                        <page name='internal_notes' string="Internal Notes">
                            <field name="comment" placeholder="Internal notes..."/>
                        </page>
                    </notebook>
                </sheet>
                </form>
            </field>
        </record>

            <!-- AcciÃ³n para Students (listado) -->
        <record id="students.action_students_teacher_list" model="ir.actions.act_window">
            <field name="name">Teachers</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('is_teacher', '=', True)]</field>
            <field name="context">{'default_is_teacher': True}</field>
            <field name="view_ids" eval="[
                (0, 0, {'view_mode': 'list', 'view_id': ref('students.view_teacher_list')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('students.view_teacher_form')})
            ]"/>
        </record>
    </data>
</odoo>